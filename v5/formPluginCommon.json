{
  "grid": [
    { "id": "p1", "xs": 6, "class": "main", "table": "units" },
    { "id": "p2", "xs": 6, "class": "main", "table": "units" },
    { "id": "p9", "xs": 12, "class": "main", "table": "unitsTreeTable", "height": "fill" }
  ],

  "spacing": 10,

  "p1": [
    { "prop": "id", "title": "ID", "type": "text" },
    { "prop": "adapter", "title": "Адаптер", "type": "input", "default": "zstack" },
    { "prop": "port", "title": "COM порт", "type": "droplist", "data": "__tool.comports", "hide":"data.p1.useManualPort == 1" },
    { "prop": "useManualPort", "title": "Указать COM порт вручную", "type": "cb" },
    { "prop": "manualPort", "title": "Пользовательский COM порт", "type": "input", "hide":"data.p1.useManualPort != 1"},
    { "prop": "useHttp", "title": "Включить веб-интерфейс Z2M", "type": "cb" },
    { "prop": "httpPort", "title": "Http порт Z2M", "type": "number", "default": 8080, "hide":"data.p1.useHttp != 1" }
  ],

  "p2": [
    {
      "prop": "restarttime",
      "title": "$Unit_Restarttime",
      "type": "number",
      "default": 5
    },
    { "prop": "loglevel", "title": "$LogLevel", "type": "droplist", "data": "loglevelList" }
  ],

  "p9": [
    {
      "title": "",
      "type": "table",
      "prop": "unitsTreeTable",

      "columns": [
        { "prop": "name", "title": "ID", "type": "text", "width": 150 },
        { "prop": "state", "title": "Состояние", "type": "text", "width": 150 },
        { "prop": "laststart", "title": "Время запуска", "type": "text", "width": 150 },
        { "prop": "laststop", "title": "Время останова", "type": "text", "width": 150 },
        { "prop": "uptime", "title": "Uptime", "type": "text", "width": 150 },
        { "prop": "error", "title": "Ошибка", "type": "text", "width": 250 }
      ]
    }
  ]
}
